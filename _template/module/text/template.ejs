<section layout="row" class="<%= Module.style.background_color %>">
	<div layout="column" layout-gt-sm="row" flex="90" flex-offset="5" style="min-height: 250px;">

		<% Module.data.columns.forEach(function(column){ %>
            <% if(column.visibility){ %>
    			<div layout="column" layout-align="center" flex style="margin-right: 20px; text-align: <%= Module.style.text_align %>">
    				<h3><%= column.title %></h3>
    				<p><%= column.paragraph %></p>
    			</div>
            <% } %>
		<% }); %>
	</div>
</section>